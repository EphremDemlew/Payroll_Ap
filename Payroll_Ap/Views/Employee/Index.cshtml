@{
    ViewData["Title"] = "Employee";

}
   @model IEnumerable<Payroll_Ap.Models.Employee>


<div class="card">
    <div class="card-header mr-5 d-flex justify-content-sm-end">
        <a asp-action="AddNewEmployee" asp-controller="Employee" class="btn btn-outline-primary btn-sm" ><i class="fa fa-plus"></i> Add Employee</a>
    </div>
    <!-- /.card-header -->
    <div class="card-body">

        <table id="dataTable" class="table table-bordered table-striped">

            <thead>
                <tr>
                    <th>Id</th>
                    <th>Full Name</th>
                    <th>Email</th>
                    <th>Phone Number</th>
                    <th>Gender</th>
                    <th>Salary</th>
                    <th>Age</th>
                    <th>Title</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var employee in Model){
                <tr>
                    <td>@employee.Id</td>
                    <td>@employee.fullName</td>
                    <td>@employee.email</td>
                    <td>@employee.phoneNumber</td>
                    <td>@employee.gender</td>
                    <td>@employee.salary</td>
                    <td>@employee.age</td>
                    <td>@employee.jobTitle</td>
                    <td><strong><a asp-action="Edit" asp-controller="Employee" asp-route-id="@employee.Id">Edit</a> &nbsp; <a asp-action="Delete" asp-controller="Employee" asp-route-id="@employee.Id" >Delete</a></strong></td>
                </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <th>Id</th>
                    <th>Full Name</th>
                    <th>Email</th>
                    <th>Phone Number</th>
                    <th>Gender</th>
                    <th>Salary</th>
                    <th>Age</th>
                    <th>Title</th>
                    <th>Action</th>
                </tr>
            </tfoot>
        </table>
    </div>
    <!-- /.card-body -->
</div>


    @section Scripts{
        <script src="~/js/employeeList.js"></script>
    }
