@inject Microsoft.AspNetCore.Identity.SignInManager<ApplicationUser> _signInManager

@if (_signInManager.IsSignedIn(User))
{
    <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Hello @User.Identity.Name
        </a>
        <div class="dropdown-menu border-5 bg-dark" aria-labelledby="navbarDropdown">
            <a class="dropdown-item" asp-action="ChangePassword" asp-controller="Account">Change Password</a>
            <a class="dropdown-item" asp-action="Signup" asp-controller="Account">Register</a>
            <a class="dropdown-item bg-danger" asp-action="Logout" asp-controller="Account">Logout</a>
        </div>
    </li>
}
else
{
    <li class="nav-item">
        <a class="btn btn-outline-primary" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Context.Request.Path">Login</a>
    </li>
}