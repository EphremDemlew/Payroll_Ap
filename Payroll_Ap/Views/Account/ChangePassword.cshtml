@model Payroll_Ap.Models.ChangePasswordModel

@{
    ViewData["Title"] = "Password";
}

<h1 class="offset-sm-4">Change Password</h1>

<hr />
<div class="row">
    <div class="col-md-4 offset-4">
        @if (ViewBag.IsSucess == true)
            {
            <div class="alert alert-success" role="alert">
                Password has been updated sucessfully
            </div>
            }
        <form asp-action="ChangePassword">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CurrentPassword" class="control-label"></label>
                <input asp-for="CurrentPassword" class="form-control" />
                <span asp-validation-for="CurrentPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewPassword" class="control-label"></label>
                <input asp-for="NewPassword" class="form-control" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmNewPassword" class="control-label"></label>
                <input asp-for="ConfirmNewPassword" class="form-control" />
                <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Change" class="btn btn-success" />
                <a href="home" class="btn btn-outline-danger float-right">Cancel</a>
                
            </div>
            
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
