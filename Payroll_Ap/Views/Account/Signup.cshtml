@model Payroll_Ap.Models.SignUpEmployeeModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Signup</title>
    <link rel="shortcut icon" type="image/x-icon" href="~/logo2.png" />
    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/plugins/fontawesome-free/css/all.min.css">
    <!-- icheck bootstrap -->
    <link rel="stylesheet" href="~/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/dist/css/adminlte.min.css">
</head>
<body class="hold-transition register-page">

    <div class="register-box">
        <div class="card card-outline card-danger badge-dark">
            <div class="card-header text-center">
                <a href="#" class="h1"><b class="text-danger">UoG</b> Payroll</a>
            </div>
            <div class="card-body">
                <p class="login-box-msg">Register a new membership</p>

                <form asp-action="Signup">

                    <div class="form-group input-group d-flex flex-column">
                        <div class="input-group-append">
                            <input asp-for="FirstName" class="form-control" placeholder="FirstName" />
                            <div class="input-group-text">
                                <span class="fas fa-user"></span>
                            </div>
                        </div>
                        <div>
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>

                    </div>

                    <div class="form-group input-group d-flex flex-column">
                        <div class="input-group-append">
                            <input asp-for="LastName" class="form-control" placeholder="LastName" />
                            <div class="input-group-text">
                                <span class="fas fa-user"></span>
                            </div>
                        </div>
                        <span asp-validation-for="LastName" class="text-danger"></span>

                    </div>
                    <div class="form-group input-group d-flex flex-column">
                        <div class="input-group-append">
                            <input asp-for="Email" class="form-control" placeholder="Email" />
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                        <div>
                            <span asp-validation-for="Email" class="text-danger"></span>
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        </div>

                    </div>

                    <div class="form-group input-group d-flex flex-column">
                        <div class="input-group-append">
                            <input asp-for="Password" class="form-control" placeholder="Password" />
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span>

                    </div>


                    <div class="form-group input-group d-flex flex-column">
                        <div class="input-group-append">
                            <input asp-for="ConfirmPassword" class="form-control" placeholder="Retype password" />
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>


                    <div class="form-group">
                        <input type="submit" value="Signup" class="btn btn-danger float-right text-white text-bold" />
                    </div>
                </form>







                        <a asp-action="Login" asp-controller="Account" class="text-center mt-3 text-white">I already have an account</a>
                    </div>
                </div>
        </div>




        <!-- jQuery -->
        <script src="/plugins/jquery/jquery.min.js"></script>
        <!-- Bootstrap 4 -->
        <script src="/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
        <!-- AdminLTE App -->
        <script src="/dist/js/adminlte.min.js"></script>
</body>
</html>



